<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GaleriActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/greenbackground" />



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="75dp"
                        app:cardCornerRadius="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_height="60dp" >

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alex_brush"
                            android:text="Galeri"
                            android:textAlignment="center"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/baloo_tamma"
                            android:text="Dinas Kesehatan Kab Belitung"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />




                    </androidx.cardview.widget.CardView>


                </RelativeLayout>



            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:fontFamily="@font/baloo_tamma"
                android:text="Pelayanan Pukesmas"
                android:textColor="#00C853"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_pelayanan"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="21dp">
                </androidx.recyclerview.widget.RecyclerView>

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="100dp"
                    app:srcCompat="@drawable/ic_baseline_navigate_next_24" />


            </RelativeLayout>





            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#00C853"
                android:layout_below="@+id/rec_pelayanan"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:fontFamily="@font/baloo_tamma"
                android:text="Kunjungan Kamenkes RI"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_kunjungan"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="21dp" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="60dp"
                    android:layout_height="80dp"

                    android:layout_alignParentRight="true"
                    android:layout_marginTop="100dp"
                    app:srcCompat="@drawable/ic_baseline_navigate_next_24" />


            </RelativeLayout>



            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/baloo_tamma"
                android:text="Sarana dan Prasarana"
                android:textAlignment="center"
                android:textColor="#00C853"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_sarana"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="60dp"
                    android:layout_height="80dp"

                    android:layout_alignParentRight="true"
                    android:layout_marginTop="100dp"
                    app:srcCompat="@drawable/ic_baseline_navigate_next_24" />


            </RelativeLayout>




        </LinearLayout>
    </ScrollView>

</RelativeLayout>